include facebook
include twitter
include instagram

mixin social-links(listCls, itemCls, linkCls, iconCls)
  ul(class=listCls)
    li(class=itemCls)
      a(
        href='https://facebook.com'
        target='_blank'
        rel='noreferrer'
        class=linkCls
        aria-label='Facebook'
      )
        +facebook-icon(iconCls)
    li(class=itemCls)
      a(
        href='https://twitter.com'
        target='_blank'
        rel='noreferrer'
        class=linkCls
        aria-label='Twitter'
      )
        +twitter-icon(iconCls)
    li(class=itemCls)
      a(
        href='https://instagram.com'
        target='_blank'
        rel='noreferrer'
        class=linkCls
        aria-label='Instagram'
      )
        +instagram-icon(iconCls)
